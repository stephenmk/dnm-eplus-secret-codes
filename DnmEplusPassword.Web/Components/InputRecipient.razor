@using DnmEplusPassword.Web.Models

<div class="row">
    <label for="townNameInput" class="col col-form-label">Recipient's Town Name</label>
    <div class="col">
        <InputText @bind-Value="Recipient.TownName" id="townNameInput" class="form-control" maxlength="6" />
        <ValidationMessage For="@(() => Recipient.TownName)" />
    </div>
</div>
<div class="row">
    <label for="recipientInput" class="col col-form-label">Recipient's Name</label>
    <div class="col">
        <InputText @bind-Value="Recipient.Name" id="recipientInput" class="form-control" maxlength="6" />
        <ValidationMessage For="@(() => Recipient.Name)" />
    </div>
</div>

@code {
    [Parameter]
    public required Recipient Recipient { get; set; }

    [CascadingParameter]
    public required EditContext EditContext { get; set; }
}
